#include <stdio.h>

struct Process {
    int pid;        
    int bt;      
    int at;      
    int pr;      
    int rt;         
    int wt;       
    int tat;     
};

int main() {
    int n, completed = 0, time = 0, min_pr, i;
    float avgWT = 0, avgTAT = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];
    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("Enter Arrival Time, Burst Time and Priority for Process P%d: ", i + 1);
        scanf("%d %d %d", &p[i].at, &p[i].bt, &p[i].pr);
        p[i].rt = p[i].bt; 
    }
    while (completed != n) {
        min_pr = 9999;
        int index = -1;
        for (i = 0; i < n; i++) {
            if (p[i].at <= time && p[i].rt > 0 && p[i].pr < min_pr) {
                min_pr = p[i].pr;
                index = i;
            }
        }

        if (index == -1) {
            time++;
            continue;
        }
        p[index].rt--;
        time++;
        if (p[index].rt == 0) {
            completed++;
            p[index].tat = time - p[index].at;
            p[index].wt = p[index].tat - p[index].bt;

            avgWT += p[index].wt;
            avgTAT += p[index].tat;
        }
    }
    printf("\nProcess\tAT\tBT\tPR\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n", p[i].pid, p[i].at, p[i].bt, p[i].pr, p[i].wt, p[i].tat);
    }

    printf("\nAverage Waiting Time = %.2f", avgWT / n);
    printf("\nAverage Turnaround Time = %.2f\n", avgTAT / n);

    return 0;
}
